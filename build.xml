<?xml version="1.0" encoding="UTF-8"?>
 
<project name="nation" default="full-suite" basedir=".">
 
    
    <property name="source" value="app" />
    
 
    <!-- commands -->
    <target name="full-suite" depends="npm , test" />
    
 
    <!-- runs npm arg value install -->
    <target name="npm">
        <echo message="Running npm ..."/>
        <exec executable="npm.cmd">
        <arg value = "install"/>
        </exec>
    </target>

    <!-- Executes test with npm arg value test -->
    <target name = "test">
        <echo message ="Running tests ..."/>
        <exec executable = "npm.cmd">
        <arg value = "test"/>
        </exec>
    </target>
    
 
 </project>
 